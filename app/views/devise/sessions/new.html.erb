<div class="login-signup">
  <div class="login-form">
     <%= image_tag('logo.png', class:"logo-login")  %>

    <h2>Your weekend starts here!</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <p class='signup-slider' data-controller='slider'>Don't have an account? <strong>Sign up!</strong></p>
  </div>
  <div class="signup-form">
    <%= render "devise/registrations/new" %>
    <p class='login-slider' data-controller='slider'>Already have an account? <strong>Login</strong></p>
    <img id='login-photo' src='https://images.unsplash.com/photo-1532635241-17e820acc59f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1415&q=80'>
  </div>
  <img id='signup-photo' src='https://images.unsplash.com/photo-1532635241-17e820acc59f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1415&q=80'>
</div>
